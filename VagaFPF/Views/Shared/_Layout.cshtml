<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FPF</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container-fluid">

        <div class="row">


            <div class="col-md-3">

                <div class="navbar">

                    <ul class="nav nav-pills nav-stacked">
                        <li class="text-left"><a>Cadastros</a></li>
                        <li class="text-center">@Html.ActionLink("Departamento", "Index", "Rules")</li>
                        <li class="text-center">@Html.ActionLink("Funcionário", "Index", "Employees")</li>
                        <li class="text-left"><a>Relatórios</a></li>
                        <li class="text-center">@Html.ActionLink("Total de salários", "Index", "Reports")</li>
                    </ul>

                </div>

            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>





        </div>
        <div class="row">
            <footer>
                <p>&copy; @DateTime.Now.Year - Desafio para vaga de programador</p>
            </footer>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/ChartJs")
    @RenderSection("scripts", required: false)

</body>
</html>
