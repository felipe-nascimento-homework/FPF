
@model IEnumerable<VagaFPF.DTO.RelatorioDTO>

@{
    ViewBag.Title = "Relatório";
}

<div class="jumbotron">
    <h3>Total de salários por departamento</h3>
</div>






<div class="row">

    <div class="btn-group" role="group" aria-label="...">

        @foreach (var item in Model)
        {
            <button type="button" class="btn btn-default">
                @item.Departamento <span class="badge"> @item.Salario</span>
            </button>
        }


    </div>

</div>

    <div class="row">

        <div Style="font-family: Corbel; font-size: small ;text-align:center " class="row">
            <div style="width:100%;height:100%">
                <canvas id="myChart" style="padding: 0;margin: auto;display: block; "> </canvas>
            </div>
        </div>

    </div>


    @section scripts {

        @Scripts.Render("~/Scripts/Reports/ReportsController.js")
    }

